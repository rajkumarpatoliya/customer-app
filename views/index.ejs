<% include partials/header %>
<h1>Add Customer</h1>
<% if(errors) { %>
    <ul>
    <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
    <% }) %>
    </ul>
<% } %>
<form action="/users/add" method="POST">
    <input type="text" name="firstname" id="firstname" placeholder="First Name"><br><br>
    <input type="text" name="lastname" id="lastname" placeholder="Last Name"><br><br>
    <input type="text" name="email" id="email" placeholder="Email"><br><br>
    <input type="submit" value="Register">
</form>
<h1><%= title %></h1>
<ul>
<% users.forEach(function(user) { %>
    <li><%= user.firstname %> <%= user.lastname %>  <a href="#" class="deleteUser" data-id="<%= user._id%>">Delete</a></li>
<% }) %>
</ul>


<% include partials/footer %>
